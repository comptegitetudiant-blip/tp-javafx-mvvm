<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" spacing="10" fx:controller="com.example.exercice.view.TodoView">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <Label fx:id="lblWelcome" style="-fx-font-weight: bold;"/>

    <HBox spacing="10">
        <TextField fx:id="txtNew" promptText="Nouvelle tâche" />
        <Button fx:id="btnAdd" text="Ajouter" />
    </HBox>

    <Label text="Vous allez ajouter : " />
    <Label fx:id="lblNewTitlePreview" />

    <TableView fx:id="tblTodos">
        <!-- Les colonnes sont configurées dans TodoView.java -->
    </TableView>

    <CheckBox fx:id="chkShowDone" text="Afficher les tâches terminées" />
    <Button fx:id="btnDelete" text="Supprimer" />
</VBox>
