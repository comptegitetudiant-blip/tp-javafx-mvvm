<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="12" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <padding><Insets top="24" right="24" bottom="24" left="24"/></padding>
    <Label text="Connexion" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <GridPane hgap="8" vgap="8">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="80"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <children>
            <Label text="Identifiant:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtUser" promptText="alice" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="txtPass" promptText="secret" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </children>
    </GridPane>
    <Label fx:id="lblError" style="-fx-text-fill: red;"/>
    <HBox spacing="8">
        <Button fx:id="btnLogin" text="Se connecter" defaultButton="true"/>
        <Button fx:id="btnCancel" text="Annuler" cancelButton="true"/>
    </HBox>
</VBox>
